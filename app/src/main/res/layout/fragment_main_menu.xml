<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fullscreen background image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/title_bg_optimized"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="no"
        android:contentDescription="Background image" />

    <!-- Scrollable content area with padding -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="110dp"
        android:layout_marginTop="80dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
                
            <!-- Button container moved higher up and made narrower -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="240dp"
                android:minHeight="0dp">

                <!-- Modern UI Game button - green with round corners and black outline -->
                <Button
                    android:id="@+id/modern_ui_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_random_game"
                    android:contentDescription="@string/new_random_game_a11y"
                    android:drawableEnd="@drawable/new_game_scaled_large"
                    android:drawablePadding="12dp"
                    android:padding="10.8dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_green"
                    android:elevation="8dp"
                    android:minHeight="0dp" />
                    
                <!-- Level Game button - Blue with round corners and black outline -->
                <Button
                    android:id="@+id/level_game_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level_game"
                    android:contentDescription="@string/level_game_a11y"
                    android:drawableEnd="@drawable/level_game_scaled_large"
                    android:drawablePadding="12dp"
                    android:padding="10.8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_blue"
                    android:elevation="8dp"
                    android:minHeight="0dp" />
                    
                <!-- Load Game button - red with round corners and black outline -->
                <Button
                    android:id="@+id/load_game_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/load_game"
                    android:contentDescription="@string/load_game_a11y"
                    android:padding="10.8dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_red"
                    android:elevation="8dp"
                    android:minHeight="0dp" />

                <!-- hidden Level Design Editor button - Purple with round corners and black outline -->
                <!-- a hidden button to the Level Design Editor is a long press on the title in the level selection screen -->
                <Button
                    android:id="@+id/level_editor_button"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="Level Design Editor"
                    android:contentDescription="Create or edit game levels"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_purple"
                    android:elevation="8dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Title centered with user profile button on the right -->
    <TextView
        android:id="@+id/main_menu_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@drawable/title_rounded_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_profile_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:importantForAccessibility="no"
        />

    <!-- Top right user profile button -->
    <ImageButton
        android:id="@+id/user_profile_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_profile"
        android:contentDescription="@string/profile_a11y"
        android:background="@drawable/circular_button_background"
        android:scaleType="centerInside"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Bottom button bar with Credits and icon buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="0dp"
        android:background="@drawable/bottom_bar_dark_gray"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">

        <!-- Credits button - Clock icon -->
        <ImageButton
            android:id="@+id/credits_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_credits"
            android:contentDescription="@string/credits"
            android:background="@drawable/circular_button_yellow"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:layout_weight="0"
            android:layout_margin="8dp" />

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- How to Play button - Question mark icon -->
        <ImageButton
            android:id="@+id/help_icon_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_help_outline"
            android:contentDescription="@string/help_a11y"
            android:background="@drawable/circular_button_orange"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:layout_weight="0"
            android:layout_margin="8dp" />

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Settings button - Gear icon -->
        <ImageButton
            android:id="@+id/settings_icon_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/settings_grid_scaled"
            android:contentDescription="@string/settings_a11y"
            android:background="@drawable/circular_button_gray"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:layout_weight="0"
            android:layout_margin="8dp" />

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Achievements button - Trophy icon -->
        <ImageButton
            android:id="@+id/achievements_icon_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/achievements_tropy_scaled"
            android:contentDescription="@string/achievements_title"
            android:background="@drawable/circular_button_purple"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:layout_weight="0"
            android:layout_margin="8dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
