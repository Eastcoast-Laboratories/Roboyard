<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/main_menu_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_title"
        app:layout_constraintWidth_max="300dp">

        <!-- New Game button -->
        <Button
            android:id="@+id/new_game_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_game"
            android:contentDescription="@string/new_game_description"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Load Game button -->
        <Button
            android:id="@+id/load_game_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/load_game"
            android:contentDescription="@string/load_game_description"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Settings button -->
        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:contentDescription="@string/settings_description"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Help button -->
        <Button
            android:id="@+id/help_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:contentDescription="@string/help_description"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Exit button -->
        <Button
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:contentDescription="@string/exit_description"
            android:padding="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
