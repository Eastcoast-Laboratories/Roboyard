<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:padding="8dp">

    <TextView
        android:id="@+id/txt_selected_robot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No robot selected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:contentDescription="Selected robot information"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_robot_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal: Not selected"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:contentDescription="Selected robot goal information"
        app:layout_constraintTop_toBottomOf="@id/txt_selected_robot"/>

    <!-- Direction controls arranged in a more compact grid -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/direction_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_robot_goal">

        <!-- North button -->
        <Button
            android:id="@+id/btn_move_north"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="North"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_blue_outline"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- West and East buttons in the same row -->
        <LinearLayout
            android:id="@+id/horizontal_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/btn_move_north"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <!-- West button -->
            <Button
                android:id="@+id/btn_move_west"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="West"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_blue_outline"
                android:layout_marginEnd="8dp" />

            <!-- East button -->
            <Button
                android:id="@+id/btn_move_east"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="East"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_blue_outline"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- South button -->
        <Button
            android:id="@+id/btn_move_south"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="South"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_blue_outline"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontal_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Robot Selection Button -->
    <Button
        android:id="@+id/btn_select_robot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Next Robot"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_rounded_purple"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/direction_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
