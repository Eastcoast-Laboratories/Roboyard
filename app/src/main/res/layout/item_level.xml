<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <!-- Level button with relative layout to allow text overlay -->
    <RelativeLayout
        android:id="@+id/level_button_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/level_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_rounded_blue_outline"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Stats overlay directly on the button -->
        <LinearLayout
            android:id="@+id/stats_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/level_moves_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:text="1/3 robots:2"
                android:lines="1" />

            <TextView
                android:id="@+id/level_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:text="0:12 fields:10"
                android:lines="1" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Compact stars strip - with much tighter spacing -->
    <LinearLayout
        android:id="@+id/stars_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@id/level_button_container"
        app:layout_constraintTop_toTopOf="@id/level_button_container">

        <ImageView
            android:id="@+id/level_star_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/star"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/level_star_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/star"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/level_star_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Legacy completed star (hidden, kept for compatibility) -->
    <ImageView
        android:id="@+id/level_completed_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/level_button_container"
        app:layout_constraintTop_toTopOf="@id/level_button_container" />

    <!-- Legacy stars text (hidden, kept for compatibility) -->
    <TextView
        android:id="@+id/level_stars"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="@id/level_button_container"
        app:layout_constraintBottom_toBottomOf="@id/level_button_container" />

    <!-- Level details panel (hidden, functionality replaced by direct display) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/level_details_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/level_button_container"
        app:layout_constraintStart_toStartOf="@id/level_button_container"
        app:layout_constraintEnd_toEndOf="@id/level_button_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/level_squares_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/level_robots_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
