<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <Button
        android:id="@+id/level_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_rounded_blue_outline"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/level_completed_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star"
        android:visibility="gone"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="@id/level_button"
        app:layout_constraintTop_toTopOf="@id/level_button"
        android:contentDescription="Level completed" />
        
    <TextView
        android:id="@+id/level_stars"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/star"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:visibility="gone"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="@id/level_button"
        app:layout_constraintBottom_toBottomOf="@id/level_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
