<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fullscreen background image - 10% higher in landscape -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/title_bg_optimized"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:importantForAccessibility="no"
        android:contentDescription="Background image" />

    <!-- Scrollable content area with padding -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
                
            <!-- Button container moved higher up and made narrower -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="240dp"
                android:minHeight="0dp">

                <!-- Modern UI Game button - green with round corners and black outline -->
                <Button
                    android:id="@+id/modern_ui_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_random_game"
                    android:contentDescription="@string/new_random_game_a11y"
                    android:drawableEnd="@drawable/new_game_scaled_large"
                    android:drawablePadding="12dp"
                    android:padding="10.8dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_green_transparent"
                    android:elevation="8dp"
                    android:minHeight="0dp" />
                    
                <!-- Level Game button - Blue with round corners and black outline -->
                <Button
                    android:id="@+id/level_game_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level_game"
                    android:contentDescription="@string/level_game_a11y"
                    android:drawableEnd="@drawable/level_game_scaled_large"
                    android:drawablePadding="12dp"
                    android:padding="10.8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_blue_transparent"
                    android:elevation="8dp"
                    android:minHeight="0dp" />
                    
                <!-- Load Game button - red with round corners and black outline -->
                <Button
                    android:id="@+id/load_game_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/load_game"
                    android:contentDescription="@string/load_game_a11y"
                    android:padding="10.8dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_red_transparent"
                    android:elevation="8dp"
                    android:minHeight="0dp" />

                <!-- hidden Level Design Editor button - Purple with round corners and black outline -->
                <!-- a hidden button to the Level Design Editor is a long press on the title in the level selection screen -->
                <Button
                    android:id="@+id/level_editor_button"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="Level Design Editor"
                    android:contentDescription="Create or edit game levels"
                    android:padding="12dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/button_fancy_purple"
                    android:elevation="8dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Top header bar with Roboyard title centered and all buttons on the right -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Header content background -->
        <View
            android:id="@+id/header_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bar_semi_transparent_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/header_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Roboyard Title - centered on screen -->
        <TextView
            android:id="@+id/main_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:importantForAccessibility="no"
            android:textAllCaps="true"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <!-- Button container on the right -->
        <LinearLayout
            android:id="@+id/header_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <!-- Credits button - Large C -->
            <Button
                android:id="@+id/credits_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="C"
                android:contentDescription="@string/credits"
                android:background="@drawable/circular_button_yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="6dp"
                android:padding="0dp" />

            <!-- How to Play button - Question mark -->
            <Button
                android:id="@+id/help_icon_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="?"
                android:contentDescription="@string/help_a11y"
                android:background="@drawable/circular_button_orange"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="6dp"
                android:padding="0dp" />

            <!-- Achievements button - Trophy icon -->
            <ImageButton
                android:id="@+id/achievements_icon_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/achievements_tropy_scaled"
                android:contentDescription="@string/achievements_title"
                android:background="@drawable/circular_button_purple"
                android:scaleType="centerInside"
                android:padding="7dp"
                android:layout_marginEnd="6dp" />

            <!-- Settings button - Gear icon -->
            <ImageButton
                android:id="@+id/settings_icon_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/settings_grid_scaled"
                android:contentDescription="@string/settings_a11y"
                android:background="@drawable/circular_button_gray"
                android:scaleType="centerInside"
                android:padding="7dp"
                android:layout_marginEnd="6dp" />
        
            <!-- User profile button / login button - rightmost -->
            <Button
                android:id="@+id/user_profile_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text=""
                android:contentDescription="@string/profile_a11y"
                android:background="@drawable/circular_button_turquoise"
                android:padding="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        
        <!-- Header bottom border -->
        <View
            android:id="@+id/header_border"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@+id/main_menu_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Hidden footer bar for landscape - keeps IDs for code compatibility -->
    <LinearLayout
        android:id="@+id/footer_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
