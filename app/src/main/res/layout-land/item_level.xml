<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <!-- Level button with stats overlay directly on it - optimized for landscape -->
    <RelativeLayout
        android:id="@+id/level_button_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- LinearLayout containing button and stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <!-- Button takes 45% of height (slightly more for landscape) -->
            <Button
                android:id="@+id/level_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:background="@drawable/button_rounded_blue_outline"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />
            
            <!-- Stats overlay takes bottom 55% with transparent background -->
            <LinearLayout
                android:id="@+id/stats_overlay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="1dp">
    
                <TextView
                    android:id="@+id/level_moves_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="1/3 robots:2"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end" />
    
                <TextView
                    android:id="@+id/level_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="0:12 squares:10"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end" />
                    
                <TextView
                    android:id="@+id/level_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="Level 1"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Horizontal stars strip with 4 stars - smaller for landscape, positioned lower and more to the right -->
    <LinearLayout
        android:id="@+id/stars_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@id/level_button_container"
        app:layout_constraintTop_toTopOf="@id/level_button_container">

        <ImageView
            android:id="@+id/level_star_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/star"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/level_star_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/star"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/level_star_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/star"
            android:visibility="gone" />
            
        <ImageView
            android:id="@+id/level_star_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
