<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape with green border and 5dp radius -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#19921d" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- Inner shape with yellow background and 3dp radius (5dp - 2dp) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>
